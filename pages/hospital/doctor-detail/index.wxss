/* pages/train/index.wxss */

.avatar{
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.train{
  align-items: center;
  padding: 20rpx;
}

.content{
  background: #fff;
  margin-bottom: 10rpx;
  padding: 20rpx;
}

.content .title{
  padding: 10rpx;
  font-weight: bold;
  font-size: 32rpx;
}

.name{
  font-size: 36rpx;
  font-weight: bold
}

.remark{
  font-size: 28rpx;
}


.footer-box {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow:0 0 8rpx 0 ;
}

.footer-box .shop-cart-btn .shop-num {
  position: absolute;
  color: #e64340;
  left: 90rpx;
  top: -20rpx;
}

.footer-box .join-shop-cart {
  text-align: center;
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  background-color: #ef8203;
  color: #fff;
  font-size: 34rpx;
}

.footer-box .now-buy {
  text-align: center;
  height: 100rpx;
  flex: 1;
  line-height: 100rpx;
  background-color: #00bfe0;
  color: #fff;
  font-size: 34rpx;
}


button[class="now-appoint"]::after {
  border: 0;
}

.footer-box .telphone {
  text-align: center;
  height: 100%;
  width: 50%;
  line-height: 100rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 34rpx;
}

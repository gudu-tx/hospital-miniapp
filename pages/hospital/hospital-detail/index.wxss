/* pages/hospital/hospital-detail/index.wxss */

.container{
  padding-bottom: 100rpx;
}

swiper{
  height: 400rpx;
}

.slide-image{
  width: 750rpx;
  height: 400rpx;
}

.wxParse-p{
  overflow: hidden
}

.btn-phone{
  width: 100%;
  border-radius: 0;
}

.footer-box {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow:0 0 8rpx 0 ;
}

.footer-box .shop-cart-btn {
  position: relative;
  width: 150rpx;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  padding-top: 26rpx;
  font-size: 20rpx;
  color: #acacb7;
  box-sizing: border-box;
  background: url("https://app.wfuhui.com/images/cart.png") no-repeat center 21rpx;
  background-size: 44rpx auto;
}

.footer-box .shop-cart-btn .shop-num {
  position: absolute;
  color: #e64340;
  left: 90rpx;
  top: -20rpx;
}

.footer-box .join-shop-cart {
  text-align: center;
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  background-color: #ef8203;
  color: #fff;
  font-size: 34rpx;
}

.footer-box .now-buy {
  text-align: center;
  height: 100rpx;
  flex: 1;
  line-height: 100rpx;
  background-color: #00bfe0;
  color: #fff;
  font-size: 34rpx;
}

.footer-box .now-appoint {
  text-align: center;
  height: 100%;
  width: 50%;
  line-height: 100rpx;
  background-color: #e64340;
  color: #fff;
  font-size: 34rpx;
  border: none;
  border-radius: 0px;
}

button[class="now-appoint"]::after {
  border: 0;
}

.footer-box .telphone {
  text-align: center;
  height: 100%;
  width: 50%;
  line-height: 100rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 34rpx;
}

.hospital-info {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 15rpx;
}

.hospital-info .price{
  font-size: 28rpx;
  color: #ef8203
}

.hospital-info .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.hospital-info .item{
  font-size: 32rpx;
  color: #555;
}

.train-item{
  width: 220rpx;
  text-align: center;
  float: left;
}

.train-item image{
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
}

.train-item .name{
  font-size: 32rpx;
}
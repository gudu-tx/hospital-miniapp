/**index.wxss**/

page {
  padding: 0 20rpx;
}

swiper{
  height: 300rpx;
}

.swiper-container {
  border-radius: 10rpx;
  overflow: hidden;
  transform: translateY(0);
}

.swiper-item {
  display: flex;
}

.slide-image{
  width: 750rpx;
  height: 300rpx;
}

.category-container{
  background: #FFFFFF
}

.weui-grids{
  border: none;
}

.weui-grid{
  border: none;
}

.weui-grid.category{
  width: 25%;
  padding: 20rpx 0rpx;
}

.goods-container{
  padding: 5rpx;
}

.goods{
  background: #FFFFFF;
  margin: 10rpx;
  padding: 0rpx;
}

.goods image{
  width: 150rpx;
  height: 150rpx;
}

.weui-grids .label{
  font-size: 26rpx;
}

.goods .price{
  font-size: 28rpx;
  color: #e64340
}

.share-img {
  border-radius: 90rpx;
  padding: 10rpx;
  position: fixed;
  bottom: 50rpx;
  right: 30rpx;
  z-index: 999999;
  background-size: 90rpx 90rpx;
  background: #ef8203;
  width: 90rpx;
  height: 90rpx;
  box-shadow:0 0 20rpx 0 #888;
}

.share-img image{
  width: 70rpx;
  height: 70rpx;
}

.goods .content{
  padding-left: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx;
  border-left: 6rpx solid #e64340;
  padding-left: 8rpx;
}

.content .item{
  font-size: 28rpx;
  color: #555
}